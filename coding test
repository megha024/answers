const valAll = getPropValuesAll(obj)
console.log(valAll)

function getPropValuesAll(obj, result = []){
  for(let k in obj){
    if(typeof obj[k] !== 'object'){
    	result.push(obj[k])
        continue
    }
    getPropValuesAll(obj[k], result)
  }
  return result
}
